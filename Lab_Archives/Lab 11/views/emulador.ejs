<%- include('includes/head.ejs') %>

<style>
    /* Estilos personalizados para el juego */
    /* ... */
    #emulatorFrame {
        display: none; /* Inicialmente oculto */
    }
</style>

<style>
    .card {
        background-color: black;
        color: white;
    }
    .card-content {
        padding: 1rem;
    }
    .title, .subtitle {
        color: white;
    }
</style>

</head>
<body>
<section class="section">
    <div class="container">
        <h1 class="title has-text-centered">EMULADORES</h1>
        <div class="columns is-multiline">
            <% for (let emulador of emuladores) { %>
                <div class="column is-one-third">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image">
                                <img src="<%= emulador.imagen %>" alt="Imagen de <%= emulador.nombre %>">
                            </figure>
                        </div>
                        <div class="card-content">
                            <div class="media">
                                <div class="media-left">
                                    <figure class="image is-48x48">
                                        <img src="<%= emulador.imagen %>" alt="Imagen de <%= emulador.nombre %>">
                                    </figure>
                                </div>
                                <div class="media-content">
                                    <p class="title is-4"><%= emulador.nombre %></p>
                                    <p class="subtitle is-6">@<%= emulador.nombre %></p>
                                </div>
                            </div>
                            <div class="content">
                                <!-- Aquí está el juego incrustado -->
                                <iframe id="emulatorFrame" width="560" height="315" 
                                    allow="fullscreen; autoplay; encrypted-media" 
                                    src="<%= emulador.enlace %>" 
                                    frameborder="0" allowfullscreen="true" 
                                    msallowfullscreen="true" mozallowfullscreen="true" 
                                    webkitallowfullscreen="true" 
                                    allowpaymentrequest="false" 
                                    referrerpolicy="unsafe-url" 
                                    sandbox="allow-same-origin allow-forms allow-scripts allow-pointer-lock allow-orientation-lock allow-popups" 
                                    scrolling="no"></iframe>
                                <!-- Botón para alternar la visibilidad -->
                                <button class= "button is-dark" onclick="toggleEmulator()">Abrir/Cerrar Emulador</button>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>

<script>
    function toggleEmulator() {
        const emulatorFrame = document.getElementById('emulatorFrame');
        if (emulatorFrame.style.display === 'none') {
            emulatorFrame.style.display = 'block'; // Mostrar el iframe
        } else {
            emulatorFrame.style.display = 'none'; // Ocultar el iframe
        }
    }
</script>
